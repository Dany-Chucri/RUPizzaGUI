               <image>
                  <Image url="@deluxepizza.png" />
               </image>
            </ImageView>
         </center>
      </BorderPane>
      <ComboBox fx:id="specialtyChooser" layoutX="299.0" layoutY="60.0" onAction="#selectSpecialty" prefHeight="25.0" prefWidth="171.0" promptText="Choose Specialty">
