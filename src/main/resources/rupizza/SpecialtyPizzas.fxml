            <FXCollections fx:factory="observableArrayList">
               <String fx:value="" />
               <String fx:value="" />
               <String fx:value="" />
               <String fx:value="" />
               <String fx:value="" />
               <String fx:value="" />
               <String fx:value="" />
            </FXCollections>
         </items>
      </ListView>
