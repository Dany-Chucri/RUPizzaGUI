<AnchorPane prefHeight="580.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="rupizza.ControllerSpecialtyPizzas">
